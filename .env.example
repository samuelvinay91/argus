# =============================================================================
# Argus Dashboard Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# =============================================================================
# CLERK AUTHENTICATION (Required)
# Get from: https://dashboard.clerk.com
# =============================================================================

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk URLs (optional, defaults shown)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Redirect URLs after sign-in/sign-up (new props, replaces deprecated afterSignInUrl/afterSignUpUrl)
# See: https://clerk.com/docs/guides/custom-redirects#redirect-url-props
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/onboarding

# Force redirect (use instead of fallback if you always want to redirect to a specific URL)
# NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
# NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/onboarding

# =============================================================================
# ARGUS BACKEND (Python/LangGraph)
# =============================================================================

# Production backend URL (Railway)
NEXT_PUBLIC_ARGUS_BACKEND_URL=https://argus-brain-production.up.railway.app

# Local development (uncomment for local testing)
# NEXT_PUBLIC_ARGUS_BACKEND_URL=http://localhost:8000

# Server-side backend URL (for API routes)
ARGUS_BACKEND_URL=https://argus-brain-production.up.railway.app

# =============================================================================
# CLOUDFLARE WORKER (Browser Automation)
# =============================================================================

E2E_WORKER_URL=https://argus-api.samuelvinay-kumar.workers.dev

# =============================================================================
# SUPABASE (Database)
# Get from: https://app.supabase.com
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGci...

# Service key (server-side only, never expose to client)
SUPABASE_SERVICE_KEY=eyJhbGci...

# =============================================================================
# AI PROVIDERS
# =============================================================================

# Anthropic API Key (for direct Claude API fallback)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (optional, for embeddings)
OPENAI_API_KEY=sk-...

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable real-time collaboration features
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# Enable visual AI testing
NEXT_PUBLIC_ENABLE_VISUAL_AI=true

# Enable scheduling features
NEXT_PUBLIC_ENABLE_SCHEDULING=true

# =============================================================================
# SECURITY
# =============================================================================

# API Key for server-to-server communication (optional)
# Generate with: openssl rand -hex 32
ARGUS_API_KEY=

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking
SENTRY_DSN=
